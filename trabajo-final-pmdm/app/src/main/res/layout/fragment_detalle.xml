<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imagen_equipo"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <TextView
        android:id="@+id/nombre_equipo"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/boton_redessociales_equipo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Ver Redes Sociales"/>

        <Button
            android:id="@+id/boton_favoritos_equipo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:text="AÃ±adir a favoritos"/>

    </LinearLayout>

    <TextView
        android:id="@+id/descripcion_equipo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:textColor="@color/black"
        android:textSize="15dp" />


</LinearLayout>